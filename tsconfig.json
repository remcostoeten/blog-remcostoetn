{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "target": "esnext",
    "module": "commonjs",
    "jsx": "preserve",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "react/jsx-runtime": [
        "node_modules/react/jsx-runtime"
      ],
      "@/*": [
        "./*"
      ],
      "@c/*": [
        "./components/*"
      ],
      "contentlayer/generated": [
        "./.contentlayer/generated"
      ]
    },
    "strictNullChecks": false,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "*pages*",
    "components/kanban/*",
    "node_modules",
    ".next"
  ]
}
